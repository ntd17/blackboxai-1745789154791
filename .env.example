# Application Settings
APP_NAME=Painting Contract System
HOSTNAME=your-domain.com
APP_LOGO_URL=https://example.com/logo.png
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///data/sqlite/app.db

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=True

# API Keys
STORACHA_API_KEY=your-storacha-api-key
OPENWEATHER_API_KEY=your-openweather-api-key

# Contact Information
CONTACT_EMAIL=contact@your-domain.com
CONTACT_WHATSAPP=+1234567890
SUPPORT_EMAIL=support@your-domain.com

# Language Settings
LANGUAGES_ENABLED=en,pt,es
DEFAULT_LANGUAGE=en

# Currency Settings
DEFAULT_CURRENCY=USD
CURRENCY_SYMBOL=$

# Blockchain Settings
GANACHE_URL=http://ganache:8545
CHAIN_ID=1337
GAS_PRICE=20000000000

# Storage Settings
UPLOAD_FOLDER=/app/data/contracts
MAX_CONTENT_LENGTH=16777216  # 16MB

# Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_HOST=redis
CACHE_REDIS_PORT=6379
CACHE_DEFAULT_TIMEOUT=300

# Security Settings
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
REMEMBER_COOKIE_DURATION=2592000  # 30 days in seconds

# SSL Certificate Paths (for Apache)
SSL_CERTIFICATE=/etc/letsencrypt/live/${HOSTNAME}/fullchain.pem
SSL_PRIVATE_KEY=/etc/letsencrypt/live/${HOSTNAME}/privkey.pem

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=300/hour
RATELIMIT_STORAGE_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Social Media Links
FACEBOOK_URL=https://facebook.com/your-page
TWITTER_URL=https://twitter.com/your-handle
INSTAGRAM_URL=https://instagram.com/your-profile
LINKEDIN_URL=https://linkedin.com/company/your-company

# Company Information
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Business Street, City, Country
COMPANY_PHONE=+1234567890
COMPANY_REGISTRATION=12345678

# Terms and Privacy
TERMS_URL=/terms
PRIVACY_URL=/privacy
ABOUT_URL=/about

# Feature Flags
ENABLE_WEATHER_PREDICTION=True
ENABLE_BLOCKCHAIN=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_WHATSAPP_NOTIFICATIONS=False

# Development Settings (override in .env.development)
DEVELOPMENT_MODE=False
DEBUG_TOOLBAR_ENABLED=False
TESTING=False

# Production Settings (override in .env.production)
PRODUCTION_MODE=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_HTTPONLY=True
